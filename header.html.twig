<header class="header">
  <div class="header_wrapper">
    <div class="logo_container">
      <a href="#">
        <img src="{{ template_path }}/images/logo.png" alt="Logo" width="80" class="logo" />
      </a>
    </div>

    <nav class="nav">
      <a href="{{ getLink('downloads') }}" class="nav_item">
        Game Guide
        <span class="nav_underline"></span>
      </a>
      <a href="{{ getLink('downloads') }}" class="nav_item">
        Download
        <span class="nav_underline"></span>
      </a>
      <a href="{{ getLink('highscores') }}" class="nav_item">
        Premium
        <span class="nav_underline"></span>
      </a>
      <a href="{{ getLink('account/create') }}" class="nav_item">
        Create Account
        <span class="nav_underline"></span>
      </a>
      <a href="({{ template_path }})" class="nav_item">
        Log in
        <span class="nav_underline"></span>
      </a>
    </nav>

    <div class="server_status">
      <h2 class="status_heading">Server Status</h2>
      {% if not status.online %}
        <p class="offline_status">Status: <span class="offline">Offline</span></p>
      {% else %}
        <p class="online_status">Status: <span class="online">Online</span></p>
        <p class="players_online"><span>Players Online:</span> {{ status.players }} / {{ status.playersMax }}</p>
        <p class="uptime"><span>Uptime:</span> {{ status.uptimeReadable }}</p>
      {% endif %}
    </div>
  </div>
</header>