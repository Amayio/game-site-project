<header class="header">
  <div class="header_wrapper">
    
    <div class="logo_container">
      <a href="#">
        <img width="80px" src="{{ template_path }}/images/logo.png" alt="Logo" class="logo">
      </a>
    </div>

    <nav class="nav">

      <div class="dropdown">
        <button class="nav_item dropdown-toggle" aria-expanded="false">
          Game Guide
        </button>
        <div class="dropdown-content">
          <div class="dropdown-category">
            <h4>Server</h4>
            <ul class="link-grid">
              <li><a href="#">Highscores</a></li>
              <li><a href="#">Characters</a></li>
              <li><a href="#">Who is Online?</a></li>
              <li><a href="#">Last Kills</a></li>
              <li><a href="#">Houses</a></li>
              <li><a href="#">Guilds</a></li>
            </ul>
          </div>
          <div class="dropdown-category">
            <h4>Game</h4>
            <ul class="link-grid">
              <li><a href="#">World Map</a></li>
              <li><a href="#">Shinobi Roster</a></li>
              <li><a href="#">Bestiary</a></li>
              <li><a href="#">Shinobi Gear</a></li>
              <li><a href="#">Tutorials</a></li>
              <li><a href="#">Systems</a></li>
            </ul>
          </div>
        </div>
      </div>

      <a class="nav_item" href="{{ getLink('downloads') }}">Download</a>
      <a class="nav_item" href="{{ getLink('highscores') }}">Premium</a>

      {% if logged %}
        <a class="nav_item" href="{{ getLink('account/manage') }}">Manage Account</a>
        <a class="nav_item" href="{{ getLink('account/logout') }}">Log out</a>
      {% else %}
        <a class="nav_item" href="{{ getLink('account/create') }}">Create Account</a>
        <a class="nav_item" href="{{ getLink('account/manage') }}">Log in</a>
      {% endif %}
    </nav>

    <div class="server_status_box">
      <p class="label server_status">Server Status</p>
      {% if not status.online %}
        <p class="offline_status">Status: <span class="offline">Offline</span></p>
      {% else %}
        <p class="offline_status">Status: <span class="online">Online</span></p>
        <p class="players_status">
          <span class="label">Players Online:</span>
          {{ status.players }} / {{ status.playersMax }}
        </p>
        <p class="uptime">
          <span class="label">Uptime:</span> {{ status.uptimeReadable }}
        </p>
      {% endif %}
    </div>

  </div>
</header>